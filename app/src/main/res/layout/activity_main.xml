<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/voice_input_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voice Input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/cart_contents_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/voice_input_button"
        android:layout_marginTop="16dp"
        android:text="Cart Contents"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/clear_cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Cart"
        android:layout_below="@id/cart_contents_textview"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
